<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
   @RenderSection("styles", false)
</head>
<body>
    <div class="navbar navbar-light bg-light navbar-expand-md fixed-top shadow-sm">
        <div class="container-fluid px-3">


            @Html.ActionLink("SPL", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

            <div class="navbar-collapse collapse">
                <ul class="navbar-nav">
                    <li class="nav-item"> @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Document Management
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li>@Html.ActionLink("Document Categories", "Index", "Documents", new { }, new {@class= "dropdown-item" })</li>
                            <li>@Html.ActionLink("Document Information", "Index", "Info", new { }, new { @class = "dropdown-item" })</li>
                           
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container-fluid body-content px-3">
        @RenderBody()


    </div>
    <footer class="container-fluid">
        <hr />
        <p>&copy; @DateTime.Now.Year - SPL</p>
    </footer>
    <script src="~/Scripts/bootstrap.bundle.js"></script>
    @RenderSection("scripts", false)
</body>
</html>